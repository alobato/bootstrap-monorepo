{
  "root": true,
  "env": { "node": true, "es2022": true },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": ["dist"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "semi": ["error", "never"]
  }
}
