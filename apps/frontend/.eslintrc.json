{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": [
    "dist"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": { "version": "18.2" }
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "semi": ["error", "never"],
    "no-console": "warn",
    "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }],
    "react/prop-types": "warn"
  }
}
